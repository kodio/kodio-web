---
import Image from '@components/sanity/Image.astro';
import type { Props as PortableTextProps } from 'astro-portabletext/types';
import type { ImageBlock } from '@lib/sanity';

export type Props = PortableTextProps<ImageBlock>;

const { node } = Astro.props;
---

<div class:list={['image-block', Astro.props.class]}>
  {
    node.image && (
      <Image image={node.image} sizes="(min-width: 980px) 880px, calc(95.15vw - 33px)" />
    )
  }
</div>

<style lang="scss">
  .image-block {
    max-width: 55rem;
    padding: 2rem 0;
    margin: auto;
  }
</style>
