---
import Logo from '@components/Logo.astro';
import SanityLink from '@components/sanity/SanityLink.astro';
import { getFooterConfig } from '@lib/sanity';

export type Props = Record<string, never>;

const { sections } = await getFooterConfig();
---

<footer>
  <div class="footer-content">
    <Logo />
    <div class="footer-sections">
      {
        sections.map(({ heading, links }) => (
          <div>
            {heading && <h2>{heading}</h2>}
            <ul>
              {links.map((link) => (
                <li>
                  <SanityLink link={link} hoverUnderline>
                    {link.label}
                  </SanityLink>
                </li>
              ))}
            </ul>
          </div>
        ))
      }
    </div>
  </div>
</footer>

<style lang="scss">
  footer {
    background-color: var(--green-800);
    color: var(--white);

    @include section-inverted-corner(var(--green-800));

    .footer-content {
      display: flex;
      gap: 1rem;
      flex-direction: column;
      margin: auto;
      padding: 2.5rem var(--content-padding) 6rem;

      @media (min-width: $width-l) {
        justify-content: space-between;
        flex-direction: row;
        padding: 4.5rem 7.5rem 8.5rem 3.75rem;
      }
    }

    .footer-sections {
      display: flex;
      flex-direction: column;
      gap: 2rem;

      @media (min-width: $width-l) {
        gap: 10rem;
        flex-direction: row;
      }

      > div {
        display: flex;
        flex-direction: column;
        gap: 0.375rem;
      }

      ul {
        display: flex;
        flex-direction: column;
        justify-content: center;
        list-style: none;
        font-size: 125%;
        line-height: 1.5;
        padding-top: 1rem;
        gap: 0.625rem;
      }
    }
  }
</style>
