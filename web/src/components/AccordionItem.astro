---
import ArrowDownIcon from '@/components/icons/ArrowDown.astro';

export type Props = {
  title: string;
};

const { title } = Astro.props;
---

<li class="accordion-item">
  <h3>
    <button
      type="button"
      id="accordion-header-1"
      class="accordion-header"
      aria-expanded="false"
      aria-controls="accordion-panel-1"
    >
      {title}
      <ArrowDownIcon class="accordion-toggle-indicator" aria-hidden={true} />
    </button>
  </h3>
  <div
    id="accordion-panel-1"
    role="region"
    class="accordion-panel"
    aria-labelledby="accordion-header-1"
  >
    <div class="accordion-panel-inner">
      <slot />
    </div>
  </div>
</li>

<style lang="scss">
  li,
  button {
    width: 100%;
  }

  li {
    border: 0.125rem solid var(--black);
    border-radius: 0.25rem;
    transition: box-shadow 0.3s;

    &:not(:last-child) {
      margin-bottom: 1rem;
    }

    h3 {
      font-size: var(--fs-h4);

      @media (min-width: $width-m) {
        font-size: var(--fs-h3);
      }
    }
  }

  button {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background-color: transparent;
    border: none;
    padding: 1rem 1.25rem;
    outline-offset: -0.125rem;

    @media (min-width: $width-m) {
      padding: 1rem 1.5rem;
    }
  }

  .accordion-toggle-indicator {
    flex-shrink: 0;
    transition: rotate 0.3s;
    width: 1.25rem;
    height: 1.25rem;

    @media (min-width: $width-m) {
      width: 1.75rem;
      height: 1.75rem;
    }
  }

  .accordion-panel {
    visibility: hidden;
    overflow: hidden;
    height: 0;
    transition: height 0.3s ease-in-out, visibility 0s 0.3s;
  }

  .accordion-panel-inner {
    padding: 0.5rem 1.25rem 2rem;

    @media (min-width: $width-m) {
      padding: 0.5rem 1.5rem 2rem;
    }
  }

  .is-open {
    box-shadow: 0.25rem 0.25rem var(--black);

    .accordion-toggle-indicator {
      rotate: 180deg;
    }

    .accordion-panel {
      visibility: visible;
      transition: height 0.3s ease-in-out, visibility 0s 0s;
    }
  }
</style>
