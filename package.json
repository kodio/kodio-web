{
  "name": "kodio-web-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Monorepo for kodio web",
  "homepage": "https://kodio.no",
  "author": {
    "name": "Kodio AS",
    "email": "hei@kodio.no",
    "url": "https://kodio.no"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kodio/kodio-web"
  },
  "packageManager": "pnpm@9.10.0",
  "scripts": {
    "dev": "pnpm --filter ./web dev",
    "build": "pnpm --filter ./web build",
    "preview": "pnpm --filter ./web preview",
    "cms": "pnpm --filter ./cms dev",
    "cms:deploy": "pnpm -F ./cms run deploy",
    "check": "pnpm --filter ./web check && pnpm --filter ./cms check"
  }
}
